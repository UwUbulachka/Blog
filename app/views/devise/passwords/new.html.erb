<div class="container">
<div class="row">
<div class="col-5 col-md-3"></div>


<div class="col-7 col-md-5">
<div class="ots_btn"> 

  <div class="layer1">
    <h1>Забыли ваш пароль?</h1><br>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
      

      
      <div class="mb-3">
      <div class="layer1"> 
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'email', for: 'exampleDropdownFormEmail2', class: 'form-label form-control w-60 p-2' %>
      </div>
      </div>

      <div class="actions ot"> 
        <button type="button f.submit" class="btn btn-warning btn-lg">Отправить</button>
      </div>
    <% end %>

     <div class=" ot"> 
       <a><%= link_to "Зарегистрироваться", new_user_registration_path, class: "a" %></a><br>
       <a><%= link_to "Войти", user_session_path, class: "a" %></a>
    </div>

</div>

    
<div class="col-5 col-md-3"></div>
</div>



