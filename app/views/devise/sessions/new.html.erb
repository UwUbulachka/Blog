<div class="container">
<div class="row">
<div class="col-5 col-md-3"></div>


<div class="col-7 col-md-5">
<div class="ots_btn"> 

  <div class="layer1">
    <h1>Войти</h1><br>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      

      
      <div class="mb-3">
      <div class="layer1"> 
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'email', for: 'exampleDropdownFormEmail2', class: 'form-label form-control w-60 p-2' %>
      </div>
      </div>

      <div class="mb-3">
      <div class="layer1">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: 'сообщение', for: 'exampleDropdownFormEmail2', class: 'form-label form-control w-60 p-2' %>
      </div>
      </div>
      
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <div class="actions ot"> 
        <button type="button f.submit" class="btn btn-warning btn-lg">Войти</button>
      </div>
    <% end %>

     <div class=" ot"> 
       <a><%= link_to "Зарегистрироваться", new_user_registration_path, class: "a" %></a><br>
       <a><%= link_to "Забыли пороль?", new_user_password_path, class: "a" %></a>
    </div>

</div>

    
<div class="col-5 col-md-3"></div>
</div>



