<% @articles.each do |article| %>
<h1><%= article.title %></h1>
<p><%= article.text %></p>

<p><%= link_to "Показать", article_path(article) %> | <%= link_to "Редактировать", edit_article_path(article) %> | <%= link_to "Удалить", article_path(article), method: :delete, data: {confirm: 'Действительно удалить?' } %> <p>	
<hr>
<% end %>